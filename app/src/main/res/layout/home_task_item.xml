<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/recycler_item"
    app:cardCornerRadius="18dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/home_item_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_item_text"
            android:text="asdasjdajksd ajskdaskjd kjasdka kjsbdkabs akjsdbakjsdb kjasdkajbd kjasbdkajsbd kjbasdkjabsd kjbkjbasd kjbkjbasd absdjkasdjk jksabdakjsbdaks aksdjbakjsdbasdk "
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginVertical="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_item_edit"
            app:layout_constraintStart_toEndOf="@+id/home_item_checkbox"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/edit_icon"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>